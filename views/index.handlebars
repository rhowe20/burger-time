<h1>Burgers!</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
<li>
	{{burger_name}}
	<button class="change-devoured" data-id="{{id}}">Yummm!</button>
</li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <li>{{burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Eat a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Food Time!</button>
</form>